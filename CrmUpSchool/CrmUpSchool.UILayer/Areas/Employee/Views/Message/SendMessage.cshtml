@model Message
@{
    ViewData["Title"] = "SendMessage";
    Layout = "~/Views/Shared/_EmployeeLayout.cshtml";
}


<h1>Mesaj Gönderme Ekranı</h1>
<form class="form-group" method="post">
    <label>Alıcı Mail</label>
    <input type="text" asp-for="ReceiverEmail" class="form-control" />
    <br />
    <label>Konu</label>
    <input type="text" asp-for="MessageSubject" class="form-control" />
    <br />
    <label>Mesaj</label>
    <textarea cols="3" rows="5" asp-for="MessageContent" class="form-control"></textarea>
    <br />
    <button class="btn btn-primary">Gönder</button>
</form>

